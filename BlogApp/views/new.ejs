<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">New Blog post</div>
        <form class="ui form" action="/blogs" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Blog Title">
            </div>
            <div class="field">
                    <label>Image</label>
                    <input type="text" name="blog[image]" placeholder="Cover image url">
            </div>
            <div class="field">
                    <label>Content</label>
                    <textarea name="blog[body]" id="" cols="30" rows="10"></textarea>
            </div>
            <input class="ui secondary button" type="submit">
        </form>
    </div>
<% include ./partials/footer %>
